{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx"],
          "moduleDirectory": ["node_modules", "."]
        },
        "alias": {
          "map": [
            ["@images", "./src/images"],
            ["@styles", "./src/styles"],
            ["@config", "./src/config"],
            ["@routes", "./src/routes"],
            ["@services", "./src/services"],
            ["@store", "./src/store"],
            ["@utils", "./src/utils"],
            ["@tests", "./src/tests"]
          ],
          "extensions": [".js", ".jsx"]
        }
      }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "jest"],
    "rules": {
      "no-undef": "off",
      "global-require": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".jsx"]
        }
      ]
    }
}
